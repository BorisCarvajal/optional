{
	"name": "optional",
	"authors": [
		"Ali Akhtarzada"
	],
	"description": "An optional/maybe type with safe dispatchingrange semantics",
	"copyright": "Copyright Â© 2018, Ali Akhtarzada",
    "license": "MIT",
	"targetPath": "bin",
	"dependencies": {
        "bolts": "~>1.0.0"
    },
    "configurations": [
        {
            "name": "unittest",
            "importPaths": [
                "./tests"
            ],
            "sourcePaths": [
                "./tests"
            ],
            "dependencies": {
                "silly": "*"
            }
        },
        {
            "name": "unittest-safe",
            "buildType": "unittest",
            "importPaths": [
                "./tests"
            ],
            "sourcePaths": [
                "./tests"
            ],
            "dependencies": {
                "silly": "*"
            },
            "dflags": ["-preview=dip1000"],
            "dflags-ldc": [
                "-fsanitize=address",
                "-disable-fp-elim",
                "-frame-pointer=all"
            ]
        }
    ],
    "buildTypes": {
        "unittest-release": {
            "buildOptions": ["releaseMode", "optimize", "inline", "unittests"]
        }
    }
}
